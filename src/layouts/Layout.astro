<style is:global>
    .grid-container{
        display: grid;
        height: 150px;
        grid-template-areas: 'area1 area1 area2 area3 area4'
                             'area1 area1 area2 area3 area4';
    }
    
    .area1{
        grid-area: area1;
        background: rgb(255, 255, 255);
        background-image: url(https://assets.xboxservices.com/assets/37/ec/37ec5a7a-08b4-466f-93e3-81fb5dd0b471.svg?n=Homepage-FY20_Home-Icons-0_XGP_72x56-01.svg);
        background-repeat: no-repeat;
        justify-content: center;
      
       
        
    }
    .area2{
        grid-area: area2;
        background: rgb(255, 255, 255);
        
    }
    .area3{
        grid-area: area3;
        background: rgb(255, 255, 255);
        height: 60px;
    }
    .area4{
        grid-area: area4;
        background: rgb(255, 255, 255);
        
    }
    .option{
        text-decoration: none;
        display: flex;
        flex-direction: column;
        background: rgb(255, 255, 255);
        width: 80px;
        height: 100%;
        justify-content: center;
        align-items: center;
        transition: background 300ms ease-in-out;
        &:hover{
            background: orange;
        }
    }
    nav{
        background: rgb(81, 81, 221);
        height: 60px;
        display: flex;
    }
    header {
        background: red;
        height: 36px;
    }

    .carrousel {
        background: green;
        height: 360px;
    }
    
    html, body {
        padding: 0;
        margin: 0;
        font-family: system-ui, sans-serif;

    }
    code {
        font-family:
            Menlo,
            Monaco,
            Lucida Console,
            Liberation Mono,
            DejaVu Sans Mono,
            Bitstream Vera Sans Mono,
            Courier New,
            monospace;
    }
</style>


